<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".activity.CountryListActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_toolbar"
        android:id="@+id/include_country"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_country"
        android:layout_marginBottom="5dp"
        android:id="@+id/recyler_countries">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_country_empty"
        android:textStyle="bold"
        android:text="No Data available"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_align"
        android:textSize="@dimen/content"
        android:visibility="gone"
        android:typeface="monospace"/>


</RelativeLayout>